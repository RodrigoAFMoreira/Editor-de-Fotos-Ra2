<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/telaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Editor de Fotos"
            android:textColor="#000000"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/selecioneImgButton"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Selecione Imagem"
            />

        <Button
            android:id="@+id/fotografarButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Fotografar"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/telaEdicao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/filtroFoto"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Filtro Crazy Foto"
                />
            <SeekBar
                android:id="@+id/zoom"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>